<div class="container">
  <h1>ToDo List</h1>
  <div class="mi_form">
    <%= form_with(model: @todo, local: true) do |form| %>
    <% if @todo.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@todos.errors.count, "error") %>
        error al crear lista:
      </h2>
      <ul>
        <% @todo.errors.full_massages.each do |message| %>
        <li><%= message %></li>
      </ul>
        <% end %>
    </div>
    <% end %>

    <div class="form-group">
      <fieldset>
        <%= form.label :description, class: "control-label"  %>
        <%= form.text_area :description, class: "form-control", placeholder: "Ingrese descripciÃ³n" %>
        </fieldset>
  </div>

  <div class="form-group">
    <fieldset>
      <%= form.label :completed, class: "control-label"  %>
      <%= form.check_box :completed, class: "form-control" %>
      </fieldset>
  </div>

  <div class="form-group">
    <fieldset>
      <%= form.submit 'Guardar', class: "btn btn-success"  %>
      </fieldset>
  </div>

    <% end %>
  </div>
</div>
